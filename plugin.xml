<plugin name='dojo-rest' version='0.1' grailsVersion='2.1.1 &gt; *'>
  <author>Matthias Hryniszak</author>
  <authorEmail>padcom@gmail.com</authorEmail>
  <title>Dojo JSON RESTful API for GORM</title>
  <description>\
This plugin provides effortless Dojo JSON API for GORM classes
</description>
<!--
  <documentation>http://grails.org/plugin/json-rest-api</documentation>
  -->
  <type>DojoRestGrailsPlugin</type>
  <resources>
    <resource>DojoRestApiUrlMappings</resource>
    <resource>org.wrighting.grails.plugins.dojorest.DojoRestApiController</resource>
  </resources>
  <repositories>
  <!--
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    -->
  </repositories>
  <dependencies>
    <runtime>
    </runtime>
  </dependencies>
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='cache' version='1.0.0' />
    </compile>
    <runtime>
      <plugin group='org.grails.plugins' name='resources' version='1.1.6' />
    </runtime>
    <build>
      <plugin group='org.grails.plugins' name='tomcat' version='2.1.1' />
    </build>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>